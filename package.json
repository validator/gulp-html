{
  "name": "gulp-html",
  "version": "2.0.0",
  "description": "gulp plugin for HTML validation, using the Nu Html Checker (v.Nu)",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/validator/gulp-html.git"
  },
  "keywords": [
    "gulpplugin",
    "htmllint"
  ],
  "author": "Daijiro Wachi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/validator/gulp-html/issues"
  },
  "homepage": "https://github.com/validator/gulp-html",
  "scripts": {
    "xo": "xo",
    "test": "npm run xo && gulp test"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "chalk": "^4.0.0",
    "plugin-error": "^1.0.1",
    "through2": "^3.0.1",
    "vnu-jar": "20.3.16",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "gulp": "^4.0.2",
    "xo": "^0.29.1"
  },
  "files": [
    "index.js"
  ],
  "xo": {
    "esnext": true,
    "space": true,
    "rules": {
      "capitalized-comments": "off",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "quote-props": [
        "error",
        "consistent"
      ],
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "unicorn/prevent-abbreviations": "off"
    }
  }
}
